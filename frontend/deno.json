{
  "name": "@gitvisor/frontend",
  "version": "0.1.0",
  "tasks": {
    "setup": "deno task install && deno task rescript:build",
    "dev": "deno task rescript:watch & deno task serve",
    "serve": "deno run --allow-net --allow-read serve.ts",
    "build": "deno task rescript:build && deno task bundle",
    "bundle": "deno run --allow-read --allow-write --allow-env bundle.ts",
    "rescript:build": "npx rescript build",
    "rescript:watch": "npx rescript build -w",
    "rescript:clean": "npx rescript clean",
    "test": "deno test --allow-read --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "update": "deno cache --reload deps.ts"
  },
  "imports": {
    "@/": "./src/",
    "std/": "https://deno.land/std@0.210.0/"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
