# Gitvisor .gitattributes

# Auto detect text files and perform LF normalization
* text=auto

# Elixir
*.ex text diff=elixir
*.exs text diff=elixir
*.eex text
*.heex text
*.leex text
mix.lock text

# ReScript
*.res text
*.resi text

# Ada
*.adb text
*.ads text
*.gpr text

# Julia
*.jl text

# Erlang
*.erl text diff=erlang
*.hrl text diff=erlang

# Documentation
*.adoc text
*.md text
*.txt text

# Configuration
*.json text
*.yaml text
*.yml text
*.toml text
*.nix text

# Shell
*.sh text eol=lf

# Web
*.html text diff=html
*.css text diff=css
*.svg text

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary

# Fonts (binary)
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary

# Linguist overrides
*.res linguist-language=ReScript
*.resi linguist-language=ReScript
flake.nix linguist-language=Nix
justfile linguist-language=Makefile
